@import "/template/login/index.wxss";

.container {
  background-color: #F2f2f2;
  min-height: 100%;
  padding-bottom: 100rpx;
}

.goods-info{
  background-color: #fff;
  padding: 35rpx 0;
  margin-bottom: 24rpx;
  width: 100%;
  position: relative;
}
.goods-info-fx {
  position: absolute;
  right: 35rpx;
  bottom: 60rpx;
}
.goods-info .goods-title{
  box-sizing: border-box;
  padding: 0 35rpx;
  font-size: 32rpx;
  line-height: 1.4;
  color: #000;
  margin-bottom: 28rpx;
}
.goods-info .goods-share{
  box-sizing: border-box;
  padding: 0 35rpx;
  font-size: 25rpx;
  line-height: 1.4;
  color: #CC0000;
  margin-bottom: 28rpx;
}
.goods-profile {
  display: flex;
  align-items:center;
}
.goods-profile .p{
   color:#e64340;
   font-size: 20pt;
   margin-left: 30rpx;
}
.goods-profile .p text{
   font-size: 12pt;
}
.goods-profile .r{
   color:#ccc;
   font-size: 10pt;
   margin-left: 30rpx;
}
.row-arrow {
  width: 686rpx;
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 102rpx;
  font-size: 28rpx;
  line-height: 102rpx;
  background: #fff;
  margin-bottom: 32rpx;
}
.row-arrow image {
  width: 40rpx;
  height: 40rpx;
}
.goods-des-info{
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}
.label-title{
  font-size:28rpx;
  color:#000000;
  padding: 30rpx;
}
.goods-text{
  padding: 0 10rpx;
  font-size:28rpx;
  color:#666666;
  line-height: 56rpx;
  margin-bottom: 30rpx;
}
.goods-text image{
  width: 100%;
}
.des-imgs{
  width:100%;
}
.des-imgs image{
  width: 100%;
}

.shop-box{
  margin: 16rpx;
  width: 718rpx;
  height: 120rpx;
  display: flex;
  background: #fff;
  border-radius: 30rpx;
  overflow: hidden;
}
.shop-box .thumbnail{
  margin: 10rpx;
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 0;
  border-radius: 50%;
}
.shop-box .info{
  padding: 16rpx 32rpx 0 24rpx;
  width: 100%;
}
.shop-box .info .title{
  color: #333;
  font-size: 30rpx;
}
.shop-box .info .tags{
  /* display: flex; */
}
.shop-box .info .tag-button{
  background-color: #FFFFFF;
  color: #595959;
  border:1px solid #92278f;
  margin-right: 15rpx;
  line-height:1em;
  height: 35rpx;
  font-size: 25rpx;
  padding: 5rpx;
  text-align:center;
}
